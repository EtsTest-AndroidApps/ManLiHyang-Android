<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="moveModel"
            type="com.sideproject.manlihyang.ui.viewmodel.MoveVIewModel" />
        <variable
            name="adapter"
            type="com.sideproject.manlihyang.ui.adapter.FollowAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_following"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            tools:listitem="@layout/item_follow"
            submitList="@{moveModel.user.following}"
            adapter="@{adapter}"
            lineSpacing="@{20}"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>